{%  extends 'structure.html.jinja2' %}

{% block content %}

                <!-- Tableau de produits -->
                <table class="table table-hover text-center mt-2">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Description</th>
                            <th scope="col">Quantité disponible</th>
                            <th scope="col">Prix à l'unité</th>
                            <th scope="col">Prix en formule</th>
                        </tr>
                    </thead>
                    <tbody>

                    {% for product in to_display %}
                        <tr>
                            <th scope="row">{{ product['id'] }}</th>
                            <td>{{ product['name'] }}</td>
                            <td>{{ product['description'] }}</td>
                            <td>{{ product['quantity_available'] }}</td>
                            <td>{{ product['price'] }}</td>
                            <td>{{ product['price_in_pack'] }}</td>
                        </tr>

                        {% endfor %}

                    </tbody>
                </table>

{% endblock %}
